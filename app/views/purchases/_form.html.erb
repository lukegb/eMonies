<%= form_for(@purchase) do |f| %>
  <% if @purchase.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@purchase.errors.count, "error") %> prohibited this purchase from being saved:</h2>

      <ul>
      <% @purchase.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :date %><br />
    <%= f.date_field :date %>
  </div>
  <div class="field">
    <%= f.label :person %><br />
    <% if @purchase.persisted? %>
      <%= @purchase.person.name %>
    <% else %>
      <%= select(:purchase, :person_id, Person.all.collect{|p| [p.name, p.id] }) %>
    <% end %>
  </div>
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :amount %><br />
    <%= f.number_field :amount, step: 0.01, value: @purchase.amount %>
  </div>
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description, cols: 50, rows: 20 %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
