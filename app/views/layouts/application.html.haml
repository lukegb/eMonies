!!! 5
%html
%head
  %title EMonies
  = stylesheet_link_tag    "application", :media => "all"
  = javascript_include_tag "application"
  = csrf_meta_tags
%body
  - if Rails.env.development? then
    .modeText DEVELOPMENT
  
  - unless current_person.nil? then
    %nav.mainnav
      %ul
        %li= link_to "Record a purchase", :new_purchase
        %li= link_to "View all purchases", :purchases
        %li= link_to "View all people", :people
        %li= link_to "View summary between people", :summary
        %li= link_to "Change bank details", edit_person_path(current_person)
        %li= link_to "Change password", edit_person_registration_path
        %li= link_to "Logout", destroy_person_session_path, :method=>:delete
  
  %section.body= yield
